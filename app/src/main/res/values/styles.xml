<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/default_colour_dark</item>
        <item name="colorAccent">@color/default_colour_bright</item>
    </style>

    <!--Text Header (above buttons, textview)-->
    <style name="text_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/default_colour_dark</item>
    </style>
    <style name="text_header_tabs" parent="text_header">
        <item name="android:textSize">15sp</item>
    </style>
    <style name="text_normal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/default_colour_dark</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
    </style>
    <style name="text_sidebyside">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/default_colour_dark</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
    </style>

    <!--String Commands -->
    <style name="string_shortcuts_view">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/default_colour_dark</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <!--Coordinates Tab-->
    <style name="coord_sidebyside" parent="text_sidebyside">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <!--Leaderboard Tab-->
    <style name="leaderboard_button_layout" parent="@style/button_layout">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!--Buttons-->
    <style name="button_layout" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/default_colour_dark</item>
        <item name="android:textColor">@color/default_colour_bright</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="button_layout_inverted" parent="@style/button_layout">
        <item name="android:background">@color/default_colour_bright</item>
        <item name="android:textColor">@color/default_colour_dark</item>
    </style>
    <style name="button_layout_tabs" parent="@style/button_layout">
        <item name="android:textSize">15sp</item>
    </style>
    <style name="button_layout_tabs_inverted" parent="@style/button_layout">
        <item name="android:textSize">15sp</item>
        <item name="android:background">@color/default_colour_bright</item>
        <item name="android:textColor">@color/default_colour_dark</item>
    </style>
    <style name="button_layout_sidebyside" parent="@style/button_layout">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="button_layout_sidebyside_inverted" parent="@style/button_layout_inverted">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="button_font_size">
        <item name="android:textSize">20sp</item>
    </style>

    <!--Dividers & Padding-->
    <style name="divider_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/default_colour_dark</item>
    </style>
    <style name="divider_vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/default_colour_dark</item>
    </style>
    <style name="divider_vertical_inverted">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/default_colour_bright</item>
    </style>
    <style name="padding_h_20">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20dp</item>
    </style>
    <style name="padding_h_30">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
    </style>
    <style name="padding_h_40">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
    </style>
</resources>
