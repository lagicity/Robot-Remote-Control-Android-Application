<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <solid android:width="1dip" android:color="@color/white" />
            <corners android:radius="3dip" />
            <stroke android:width="1px" android:color="@color/white" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <solid android:width="1dip" android:color="@color/green_400" />
            <corners android:radius="3dip" />
            <stroke android:width="1px" android:color="@color/green_400" />
        </shape>
    </item>
</selector>